<div class="contact-mail">

<%= form_tag("/home/mail", method: "get") do %>
  <%= label_tag(:q, "Email Id:") %>
  <%= text_field_tag(:email) %>
  <br>
  <%= label_tag(:q, "Message:") %>
  <%= text_area_tag :message, nil , :cols => 20, :rows => 11 %>
